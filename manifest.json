{
  "manifest_version": 3,
  "name": "Still Reader",
  "version": "1.1.0",
  "description": "Distraction-free reader mode with optional AI summary.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Still Reader"
  },
  "options_page": "settings.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "toggle-reader": {
      "suggested_key": {
        "default": "Ctrl+Shift+R",
        "mac": "Command+Shift+R"
      },
      "description": "Toggle reader mode"
    },
    "activate-reader": {
      "suggested_key": {
        "default": "Alt+R",
        "mac": "Option+R"
      },
      "description": "Activate reader mode"
    },
    "summarize": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Option+S"
      },
      "description": "Generate AI summary"
    }
  }
}

